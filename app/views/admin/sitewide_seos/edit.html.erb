<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t("sitewide_seo") %></h1>

<% form_tag(admin_sitewide_seo_path, :method => :put) do -%>
  <p>
    <%= label_tag :homepage_title, t('homepage_title') %><br>
    <%= text_field_tag('preferences[homepage_title]', Spree::Config[:homepage_title], :size => 50) %>
  </p>
  <p>
    <%= label_tag :homepage_meta_keywords, t('homepage_meta_keywords') %><br>
    <%= text_field_tag('preferences[homepage_meta_keywords]', Spree::Config[:homepage_meta_keywords], :size => 50) %>
  </p>
  <p>
    <%= label_tag :homepage_title, t('homepage_meta_description') %><br>
    <%= text_field_tag('preferences[homepage_meta_description]', Spree::Config[:homepage_meta_description], :size => 50) %>
  </p>
  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_sitewide_seo_url %>
  </p>
<% end -%>
